# Окружение
NODE_ENV=development
APP_NAME=chopcheck

# База данных postgresql
DATABASE_URL=postgresql://chopcheck:chopcheck_dev_password@localhost:5432/chopcheck

# Кэш (redis или memory)
CACHE_TYPE=redis
CACHE_URL=redis://localhost:6379
CACHE_KEY_PREFIX=cc
CACHE_DEFAULT_TTL=3600
CACHE_MAX_MEMORY_ITEMS=1000

# JWT токены (обязательно замените на свой!)
# сгенерировать: https://jwtsecrets.com/
JWT_SECRET=your_jwt_secret
JWT_ISSUER=nowhere-auth-service
JWT_AUDIENCE=chopcheck

# telegram бот (получите у @BotFather)
TELEGRAM_BOT_TOKEN=your_telegram_token

# Auth service (опционально, если используется)
# AUTH_SERVICE_URL=http://localhost:8081
# AUTH_SERVICE_TIMEOUT=5000
AUTH_DEV_MODE=true

# Порт сервера
PORT=8080

# Логирование
LOG_LEVEL=debug
LOG_FORMAT=text